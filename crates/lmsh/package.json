{
  "name": "@claude-fleet/lmsh",
  "version": "1.0.0",
  "description": "Natural language to shell command translator for Claude Code Tools",
  "type": "module",
  "main": "index.js",
  "types": "index.d.ts",
  "napi": {
    "name": "cct-lmsh",
    "triples": {
      "defaults": true,
      "additional": [
        "x86_64-apple-darwin",
        "aarch64-apple-darwin",
        "x86_64-unknown-linux-gnu",
        "aarch64-unknown-linux-gnu"
      ]
    }
  },
  "files": [
    "index.js",
    "index.d.ts",
    "*.node"
  ],
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "build:rust": "napi build --platform --release",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "cargo test",
    "version": "napi version"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.0"
  },
  "engines": {
    "node": ">= 18"
  },
  "keywords": [
    "claude",
    "shell",
    "natural-language",
    "command-line",
    "napi-rs"
  ],
  "license": "MIT"
}
