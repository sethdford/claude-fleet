{
  "name": "@claude-fleet/mcp",
  "version": "1.0.0",
  "description": "MCP Server for Claude Code Tools",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "cct-mcp": "./dist/bin.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "start": "node dist/bin.js"
  },
  "dependencies": {
    "@claude-fleet/common": "workspace:*",
    "@claude-fleet/storage": "workspace:*",
    "@claude-fleet/session": "workspace:*",
    "@claude-fleet/fleet": "workspace:*",
    "@claude-fleet/safety": "workspace:*",
    "@claude-fleet/tmux": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.4.0",
    "vitest": "^1.2.0"
  }
}
